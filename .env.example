# Environment Configuration
# ========================

# Environment: "development" or "production"
# In development mode, emails are logged to console instead of being sent
NODE_ENV="development"

# Server Configuration
# --------------------
PORT=3030
MONGODB_PORT=27017

# Authentication
# --------------
# Secret for signing JWT tokens - use a strong random string in production
JWT_SECRET="your-secure-jwt-secret-here"

# LDAP Configuration for Active Directory authentication
LDAP_URL="ldap://DOMAIN.ac.uk:PORT"
LDAP_BIND_DN="ldapuser"
LDAP_BIND_CREDENTIALS="password"
LDAP_SEARCH_BASE="OU=NBIUsers,dc=nbi,dc=ac,dc=uk"
LDAP_SEARCH_FILTER="(sAMAccountName={{username}})"

# Admin password for special admin operations
ADMIN_PASSWORD="password"

# File Storage Configuration
# --------------------------
# Root directory for storing data files (sync with komondor-web)
DATASTORE_ROOT="/var/datastore-root"

# Directory on HPC for temporary file transfers
HPC_TRANSFER_DIRECTORY="/hpc/tempWebUploadsDir"

# Access Control
# --------------
# Users with full access to all records (JSON array of usernames)
FULL_RECORDS_ACCESS_USERS=["some", "usernames", "here"]

# Email Configuration
# -------------------
# Email addresses to receive ENA submission notifications (JSON array)
ENA_ADMIN_EMAILS=["admin@example.com"]

# SMTP server settings
SMTP_HOST="mail.example.com"
SMTP_PORT=25
SMTP_FROM="TSL sequences site <bioinformatics@tsl.ac.uk>"

# CORS Configuration
# ------------------
# Only accept API requests from this origin (komondor-web or komondor-power URL)
WEB_APP_URL="http://localhost:3000"

# MD5 Verification Configuration
# -------------------------------
# Set to "true" to skip MD5 verification entirely (emergency use only)
# SKIP_MD5_VERIFICATION="false"
